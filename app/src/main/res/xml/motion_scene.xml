<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@layout/fragment_main"
        motion:constraintSetStart="@layout/fragment_main_start"
        motion:duration="1000">

        <!-- <OnClick motion:targetId="@id/wiki_button" />-->
        <OnSwipe
             motion:touchAnchorId="@id/wiki_button"
             motion:touchAnchorSide="top"
             motion:dragDirection="dragUp"/>
    </Transition>
    <Transition
        motion:constraintSetEnd="@layout/fragment_main"
        motion:constraintSetStart="@layout/fragment_main_start"
        motion:duration="1000">
    <OnSwipe
        motion:touchAnchorId="@id/input_layout"
        motion:touchAnchorSide="left"
        motion:dragDirection="dragEnd"/>
    </Transition>
</MotionScene>
